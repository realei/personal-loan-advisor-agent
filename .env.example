# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# DeepEval API Key (optional, for cloud features)
DEEPEVAL_API_KEY=your_deepeval_api_key_here

# Model Configuration
# Agent使用的模型 (用于实际对话和工具调用)
AGENT_MODEL=gpt-4o-mini

# DeepEval评估使用的模型 (用于评估质量)
DEEPEVAL_MODEL=gpt-4o-mini

# LLM Temperature
TEMPERATURE=0.7

# MongoDB Configuration
# MongoDB连接URI（默认本地开发环境）
MONGODB_URI=mongodb://admin:password_please_change_me@localhost:27017/

# MongoDB数据库名（默认loan_advisor）
MONGODB_DATABASE=loan_advisor

# MongoDB集合名称（可选，使用默认值）
MONGODB_SESSION_COLLECTION=agno_sessions
MONGODB_MEMORY_COLLECTION=agno_memories
MONGODB_METRICS_COLLECTION=agno_metrics

# DeepEval Evaluation Thresholds (评估阈值配置)
# 所有阈值都有默认值，可以根据需要调整

# 标准DeepEval指标阈值
EVAL_THRESHOLD_ANSWER_RELEVANCY=0.7      # 答案相关性 (默认0.7)
EVAL_THRESHOLD_FAITHFULNESS=0.75         # 忠实度 (默认0.75)
EVAL_THRESHOLD_HALLUCINATION=0.3         # 幻觉-越低越好 (默认0.3)
EVAL_THRESHOLD_BIAS=0.3                  # 偏见-越低越好 (默认0.3)
EVAL_THRESHOLD_TOXICITY=0.2              # 毒性-越低越好 (默认0.2)
EVAL_THRESHOLD_CONTEXTUAL_RELEVANCY=0.7  # 上下文相关性 (默认0.7)
EVAL_THRESHOLD_CONTEXTUAL_PRECISION=0.7  # 上下文精确度 (默认0.7)
EVAL_THRESHOLD_CONTEXTUAL_RECALL=0.7     # 上下文召回率 (默认0.7)

# 自定义指标阈值
EVAL_THRESHOLD_TOOL_ACCURACY=0.8              # 工具准确性 (默认0.8)
EVAL_THRESHOLD_PARAMETER_CORRECTNESS=0.9      # 参数正确性 (默认0.9)
EVAL_THRESHOLD_RESPONSE_TIME=15.0             # 响应时间-秒 (默认15.0)
EVAL_THRESHOLD_TOKEN_LIMIT=5000               # Token限制 (默认5000)
EVAL_THRESHOLD_TOOL_CHAIN_LOGIC=0.85          # 工具链逻辑性 (默认0.85)

# Loan Configuration (BANK-specific)
MIN_AGE=18
MAX_AGE=65
MIN_INCOME_AED=5000
MIN_CREDIT_SCORE=600
MAX_DTI_RATIO=0.5
MAX_LOAN_AMOUNT_AED=1000000
MIN_LOAN_AMOUNT_AED=10000
INTEREST_RATE_BASE=0.0499
