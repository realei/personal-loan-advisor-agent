# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# AgentOS Security Key (for API authentication with bearer token)
# Generate a secure key and set it here to enable authentication
# All API requests will require: Authorization: Bearer <your_key>
OS_SECURITY_KEY=your_security_key_here

# CORS Configuration for AgentUI
# Allowed origins for CORS (comma-separated list)
# Use "*" for all origins (development), or specify domains for production
# Example: https://your-agentui.com,https://localhost:3000
ALLOWED_ORIGINS=*

# DeepEval API Key (optional, for cloud features)
DEEPEVAL_API_KEY=your_deepeval_api_key_here

# Model Configuration
# Model used by Agent (for actual conversations and tool calls)
AGENT_MODEL=gpt-4o-mini

# Model used by DeepEval evaluation (for quality assessment)
DEEPEVAL_MODEL=gpt-4o-mini

# LLM Temperature (0.0-1.0, lower = more deterministic)
TEMPERATURE=0.7

# Output Mode Configuration
# Controls how agent responses are formatted
# Options:
#   markdown   - Human-readable, streaming-friendly (default)
#   structured - Machine-readable, Pydantic-validated JSON
#   json       - Alias for structured
#   pydantic   - Alias for structured
OUTPUT_MODE=markdown

# MongoDB Configuration
# MongoDB connection URI (default local development environment)
MONGODB_URI=mongodb://admin:password_please_change_me@localhost:27017/

# MongoDB database name (default loan_advisor)
MONGODB_DATABASE=loan_advisor

# MongoDB collection names (optional, uses defaults)
MONGODB_SESSION_COLLECTION=agno_sessions
MONGODB_MEMORY_COLLECTION=agno_memories
MONGODB_METRICS_COLLECTION=agno_metrics

# DeepEval Evaluation Thresholds
# All thresholds have default values and can be adjusted as needed

# Standard DeepEval metric thresholds
EVAL_THRESHOLD_ANSWER_RELEVANCY=0.7      # Answer relevancy (default 0.7)
EVAL_THRESHOLD_FAITHFULNESS=0.75         # Faithfulness (default 0.75)
EVAL_THRESHOLD_HALLUCINATION=0.3         # Hallucination - lower is better (default 0.3)
EVAL_THRESHOLD_BIAS=0.3                  # Bias - lower is better (default 0.3)
EVAL_THRESHOLD_TOXICITY=0.2              # Toxicity - lower is better (default 0.2)
EVAL_THRESHOLD_CONTEXTUAL_RELEVANCY=0.7  # Contextual relevancy (default 0.7)
EVAL_THRESHOLD_CONTEXTUAL_PRECISION=0.7  # Contextual precision (default 0.7)
EVAL_THRESHOLD_CONTEXTUAL_RECALL=0.7     # Contextual recall (default 0.7)

# Custom metric thresholds
EVAL_THRESHOLD_TOOL_ACCURACY=0.8              # Tool accuracy (default 0.8)
EVAL_THRESHOLD_PARAMETER_CORRECTNESS=0.9      # Parameter correctness (default 0.9)
EVAL_THRESHOLD_RESPONSE_TIME=15.0             # Response time in seconds (default 15.0)
EVAL_THRESHOLD_TOKEN_LIMIT=5000               # Token limit (default 5000)
EVAL_THRESHOLD_TOOL_CHAIN_LOGIC=0.85          # Tool chain logic (default 0.85)

